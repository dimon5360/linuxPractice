{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "g++",
            "args": [ 
                "-std=c++17",
                "main.cpp",
                "UnitTest.cpp",
                "serv/STcpServer.cpp",
                "serv/SWebSockServer.cpp",
                "DDatabase.cpp",
                "DDataProcessor.cpp",
                "psql/PgConnection.cpp",
                "psql/PgRequest.cpp",
                "-O3",
                "-lboost_system", 
                "-lboost_thread-mt",
                "-lboost_chrono-mt",
                "-lpthread",
                "-lpq",
                "-o",
                "main",
                "-I${workspaceFolder}/inc",
                "-I${workspaceFolder}/psql",
                "-I${workspaceFolder}/serv",
                "-I/usr/local/Cellar/boost/1.73.0/include",
                "-I/usr/local/Cellar/libpq/12.3/bin/"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "g++ run active file",
            "command": "${workspaceFolder}/main",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "g++ clean",
            "command": "rm ${workspaceFolder}/main",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        }
    ]
}