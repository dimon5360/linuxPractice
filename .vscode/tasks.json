{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "g++",
            "args": [ 
                "main.cpp",
                "UnitTest.cpp",
                "SServer.cpp",
                "SService.cpp",
                "DDatabase.cpp",
                "-O3",
                "-lboost_system", 
                // "-lboost_thread-mt", // mac OS
                // "-lboost_chrono-mt", // mac OS
                "-lboost_thread", // linux
                "-lboost_chrono", // linux
                "-o",
                "main",
                "-I${workspaceFolder}/inc",
                "-I/usr/local/Cellar/boost/1.72.0_2/include"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "g++ run active file",
            "command": "${workspaceFolder}/main",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        }
    ]
}