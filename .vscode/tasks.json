{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            // "command": "g++ main.cpp -o main -I${workspaceFolder}/inc",
            "command": "g++",
            "args": [
                "main.cpp",
                "-o",
                "main",
                "-I${workspaceFolder}/inc"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}